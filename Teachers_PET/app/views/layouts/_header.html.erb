<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'Teachers_PET', root_path, class: 'navbar-brand', id: "logo" %>
      </div>
      <div id="navbar">
        <% if signed_in? %>
          <ul class="nav navbar-nav">
            <%= form_tag root_path, class: 'timetable_select' do %>
              <%= select_tag 'set_timetable',
               options_from_collection_for_select(current_user.timetables, "id", "name", current_user.selected_timetable_id),
                onchange: 'this.form.submit()' %>
              <%= submit_tag 'submit' %>
              <%= javascript_tag "$('.timetable_select input').hide()" %>
            <% end %>
          </ul>
        <% end %>

        <ul class="nav navbar-nav pull-right">
          <% if signed_in? %>
            <li><span id="banner-username"><%= current_user.email %></span></li>
            <li><%= link_to 'Sign out', sign_out_path, method: :delete %></li>
            <li><%= link_to 'Settings', settings_path %></li>
          <% else %>
            <li><%= link_to 'Sign in', sign_in_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
</header>